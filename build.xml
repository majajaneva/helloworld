<?xml version="1.0"?>
<project name="Hello" default="hello" basedir=".">
	<property name="cppcheck.exe" value="C:\Program Files\Cppcheck"/>
	
	<target name="init">
		<condition property="cc" value="msvc">
			<os family="windows"/>
		</condition>
		<condition property="cc" value="gcc">
			<os family="unix"/>
		</condition>
	</target>
	 
	<target name="hello" depends="init">
		<cc name="${cc}" outfile="hello">
			<fileset dir="." includes="hello.c"/>
		</cc>
	</target>
 
</project>
